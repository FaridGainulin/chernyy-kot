.input
  height: 45px
  width 100%
  padding: 0 34px;
  font-family: 'Inter-Regular'
  font-weight: 400
  font-size: 14px;
  line-height: 110%
  color: #fff
  border: 1px solid #fff
  border-radius: 10px;
  background: transparent
  position relative
  // overflow hidden
  letter-spacing: 1px

  &.active
    .input__progress
      opacity 1
      min-width: 40px
      span
        opacity 1
  &__progress
    position: absolute
    height: 100%
    top: 0
    left: 0
    background: #A00178
    opacity 0
    min-width: 0
    display: flex
    align-items: center
    justify-content: center
    font-size: 16px
    line-height: 16px
    transition: min-width 1s, opacity 0.8s
    color: #fff
    font-weight: bold
    border-radius: 10px
    +above($breakpoints.xxl)
      font-size: 20px
      line-height: 20px
    span
      opacity 0
      transition: 2s

  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #A00178
  &:focus
    color: #fff
    caret-color: #A00178
    border 1px solid #A00178
    box-shadow: 3px 3px 10px 0px #A00178
    // background: #fff
    &::placeholder
      color: #fff
  &::placeholder
    color: #fff
  +above($breakpoints.sm)
    padding: 0 25px;
    font-size: 14px;
    height: 50px
  +above($breakpoints.md)
    padding: 0 30px;
    font-size: 16px;
    height: 55px
  +above($breakpoints.xxl)
    padding: 0 34px;
    font-size: 18px;
    height: 60px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    // background: #fff
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

