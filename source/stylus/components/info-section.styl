.info-section
  // background-image: url('../images/info-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    z-index 1
    padding 20px 0 10px
    letter-spacing: 1px
    color: #000
    +above($breakpoints.sm)
      padding 50px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 93px 0 103px

  &__img-left
    position: absolute
    z-index -1
    width: 100px;
    height: auto;
    bottom: 9px;
    left: -90px;
    +above($breakpoints.sm)
      width: 146px;
      bottom: 56px;
      left: -160px;
    +above($breakpoints.md)
      width: 180px;
      bottom: 89px;
      left: -205px;
    +above($breakpoints.xxl)
      width 248px
      bottom: 73px
      left: -304px

  &__img-right
    position: absolute
    z-index -1
    width: 100px;
    height: auto;
    top: 83px;
    right: -95px;
    +above($breakpoints.sm)
      width: 127px;
      top: 49px;
      right: -125px;
    +above($breakpoints.md)
      width: 150px;
      top: 90px;
      right: -170px;
    +above($breakpoints.xxl)
      width 198px
      top: 76px
      right: -293px

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    padding 5px 0 10px
    +above($breakpoints.sm)
      padding 12px 0 20px
    +above($breakpoints.md)
      padding 15px 0 22px
    +above($breakpoints.xxl)
      padding 17px 0 26px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 5px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 11px

  &__card
    width 280px !important
    display: flex
    align-items: center
    justify-content center
    gap: 5px
    +above($breakpoints.sm)
      width 600px !important
      justify-content start
      gap: 6px

  &__card-icon
    width 12px
    height: auto
    +above($breakpoints.sm)
      width 15px
    +above($breakpoints.md)
      width 18px
    +above($breakpoints.xxl)
      width 21px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    width 100%
    border-radius: 10px
    background-image: url('../images/info-section-bottom-bg.jpg')
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    background-color #000
    padding 15px 10px
    +above($breakpoints.sm)
      margin-top 40px
      flex-direction: row
      justify-content center
      gap: 10px
      padding 25px 5px
    +above($breakpoints.md)
      margin-top 70px
      gap: 15px
      padding 30px 5px
    +above($breakpoints.xxl)
      margin-top 104px
      gap: 20px
      height: 135px
      padding 37px 5px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 220px !important
      +above($breakpoints.md)
        width 300px !important
      +above($breakpoints.xxl)
        width 360px !important

  &__img
    width 230px
    height: auto
    margin 10px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 320px;
      top: 100px;
      right: 0;
    +above($breakpoints.md)
      width: 457px;
      top: 114px;
      right: -14px;
    +above($breakpoints.xxl)
      width 557px
      top: 140px
      right: -14px
