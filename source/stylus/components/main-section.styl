.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color $color-black

  &__container
    position relative
    z-index 1
    padding 0 0 0 0
    +above($breakpoints.sm)
      padding 0 0 50px 0
    +above($breakpoints.md)
      padding 0 0 80px 0
    +above($breakpoints.xxl)
      padding 0 0 114px 0

  &__title
    position relative
    z-index 1
    padding 15px 0 15px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0 30px 0
    +above($breakpoints.md)
      letter-spacing: 2px
      padding 70px 0 50px 0
    +above($breakpoints.xxl)
      padding 98px 0 76px 0
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-pink
      border-radius: 5px
      width: 184px;
      height: 18px;
      bottom: 17px;
      left: 124px;
      +above($breakpoints.sm)
        width: 346px;
        height: 32px;
        bottom: 32px;
        left: -4px;
      +above($breakpoints.md)
        border-radius: 10px
        width: 454px;
        height: 38px;
        bottom: 54px;
        left: -4px;
      +above($breakpoints.xxl)
        width: 525px;
        height: 44px;
        bottom: 81px;
        left: -7px;

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    border: 1px solid #fff
    border-radius: 10px
    padding 8px
    background-color transparent
    margin-bottom 15px
    +above($breakpoints.sm)
      margin-bottom 30px
      width 340px
      gap: 10px
      padding 10px
    +above($breakpoints.md)
      margin-bottom 50px
      width 380px
      gap: 12px
      padding 12px
    +above($breakpoints.xxl)
      margin-bottom 76px
      width 430px
      height: 300px
      gap: 15px
      padding 15px

  &__form-text
    text-transform: uppercase
    text-align: center
    padding 5px 0
    +above($breakpoints.sm)
      padding 6px 0
    +above($breakpoints.md)
      padding 8px 0
    +above($breakpoints.xxl)
      padding 9px 0

  &__cards
    +above($breakpoints.sm)
      display: flex

  &__card
    width 280px !important
    display: flex
    align-items: center
    justify-content center
    gap: 10px
    +above($breakpoints.sm)
      width 160px !important
      flex-direction: column
      align-items: flex-start
      justify-content start
      gap: 6px
    +above($breakpoints.md)
      width 175px !important
      gap: 8px
    +above($breakpoints.xxl)
      width 200px !important
      gap: 10px

  &__card-img
    width 35px
    height: auto
    +above($breakpoints.sm)
      width 50px
    +above($breakpoints.md)
      width 55px
    +above($breakpoints.xxl)
      width 59px

  &__img
    width 280px
    height: auto
    margin: 0 0 0 -4px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 570px;
      bottom: 0;
      right: -130px;
    +above($breakpoints.md)
      width: 780px;
      right: -142px;
    +above($breakpoints.xxl)
      width 966px
      right: -190px
